{% extends "base.jinja2" %}
{% block page_title %}Samba4 Manager - Edit share{%endblock%}
{% block breadcrumb_items %}
	{{ super() }}
    <li class="breadcrumb-item">
        <a href="{{ request.route_path('listar_shares') }}">Shares</a>
    </li>
{% endblock %}
{% block breadcrumb_active_item %}
            <li class="breadcrumb-item active">Edit Share</li>
{% endblock %}
{% block sidebar_shares %}active{% endblock %}
{% block content %}
<form method="POST" action="{{ request.route_path('editar_share_grabar_form') }}">
<div class="form-group row">
	{{ form.dn.label(class="col-sm-2 col-form-label") }}
	<div class="col-sm-10">
		{{ form.dn(class="form-control")}}
	</div>
</div>
<div class="form-group row">
	{{ form.samaccountname.label(class="col-sm-2 col-form-label") }}
	<div class="col-sm-10">
		{{ form.samaccountname(class="form-control")}}
	</div>
</div>
</form>
{% endblock %}